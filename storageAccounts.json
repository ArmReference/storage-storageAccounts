{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2017.09.01.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Standard_ZRS",
        "Premium_LRS"
      ]
    },
    "kind": {
      "type": "string",
      "allowedValues": [
        "Storage",
        "StorageV2",
        "BlobStorage"
      ]
    },
    "DependsOn": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Pass dependencies"
      }
    }
  },
  "variables": {
    "comments": {
      "definition": "https://docs.microsoft.com/en-us/rest/api/storagerp/srp_json_create_storage_account"
    },
    "storageAccounts": {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('name')]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": "[if(empty(parameters('DependsOn')),json('null'),parameters('DependsOn'))]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "[parameters('kind')]",
      "properties": {
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('name')]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": "[if(empty(parameters('DependsOn')),json('null'),parameters('DependsOn'))]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "[parameters('kind')]",
      "properties": {
      }
    }
  ],
  "outputs": {
    "storageAccounts": {
      "type": "object",
      "value": "[variables('storageAccounts')]"
    }
  }
}